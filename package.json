{
  "name": "way-farer",
  "version": "1.0.0",
  "description": "public bus transportation booking server",
  "main": "app.js",
  "scripts": {
    "start": "babel-node app.js",
    "start:dev": "nodemon --exec babel-node app.js",
    "create": "babel-node ./server/model/db.js createTables",
    "db:create": "psql -U way-farer -d way_farer -f server/model/tables.sql",
    "db:drop": "psql -U way-farer -d way_farer -f server/model/drop.sql",
    "db": "npm run db:drop && npm run db:create",
    "test:create": "psql -U postgres -d wayfarer_test -f server/model/tables.sql",
    "test:drop": "psql -U postgres -d wayfarer_test -f server/model/drop.sql",
    "test:db": "npm run test:drop && npm run test:create",
    "eslint:init": "./node_modules/.bin/eslint --init",
    "eslint": "./node_modules/.bin/eslint --fix ./server/**/*.js",
    "test": "cross-env NODE_ENV=test nyc mocha --require @babel/register --timeout 6000 test/*.js --exit",
    "test:dev": "npm run test:db && npm test && npm run coverage",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EphraimDev/way-farer.git"
  },
  "author": "Ephraim Aigbefo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EphraimDev/way-farer/issues"
  },
  "homepage": "https://github.com/EphraimDev/way-farer#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.18.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1"
  },
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "make-runnable": "^1.3.6",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "nodemailer": "^6.2.1",
    "pg": "^7.11.0",
    "random-string": "^0.2.0"
  }
}
